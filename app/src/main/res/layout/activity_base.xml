<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <Button
            android:text="@string/sendkey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/sendKey_"/>
    <Button
            android:text="@string/getKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/getKey"/>
    <Button
            android:text="@string/using_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/usingKey"/>


    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

</LinearLayout>