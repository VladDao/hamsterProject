<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">


    <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            tools:layout_editor_absoluteY="40dp" tools:layout_editor_absoluteX="84dp" android:text="Login"/>
    <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            tools:layout_editor_absoluteY="40dp" tools:layout_editor_absoluteX="84dp" android:text="Password"/>
    <Button
            android:id="@+id/button"
            android:text="Authorization"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="Received Key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/GetTextView"/>
    <Button
            android:text="Get key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/GetButtonGet"/>

</LinearLayout>